{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rebuild",
      "type": "shell",
      "command": "./rebuild.sh"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "python setup.py build",
      //"dependsOn": "echo",
      "options": {
        "statusbar": {
          "label": "Build",
          "color": "#3ff148"
          //					"backgroundColor": "#0f100f"
        }
      }
    },
    {
      "label": "install",
      "type": "shell",
      "command": "python setup.py install",
      //"dependsOn": "build",
      "options": {
        "statusbar": {
          "label": "Install",
          "color": "#3ff148"
          //					"backgroundColor": "#0f100f"
        }
      }
    },
    {
      "label": "bdist_wheel",
      "type": "shell",
      "command": "python setup.py bdist_wheel",
      //"dependsOn": "build",
      "options": {
        "statusbar": {
          "label": "bdist",
          "color": "#3ff148"
          //					"backgroundColor": "#0f100f"
        }
      }
    },
    {
      "label": "sdist",
      "type": "shell",
      "command": "python setup.py sdist",
      "dependsOn": "build",
      "options": {
        "statusbar": {
          "label": "sdist",
          "color": "#3ff148"
          //					"backgroundColor": "#0f100f"
        }
      }
    },
    {
      "label": "bdist_sdist",
      "type": "shell",
      "command": "python setup.py bdist_wheel sdist",
      "dependsOn": "build",
      "options": {
        "statusbar": {
          "label": "bdist-sdist",
          "color": "#3ff148"
          //					"backgroundColor": "#0f100f"
        }
      }
    }
  ]
}
